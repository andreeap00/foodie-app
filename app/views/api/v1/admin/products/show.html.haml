.container-menu
  #site-menu
    #menu
      %ul.product-list
        %li.dish-item{ "data-price" => @product.price}
          .dish-img
            - if @product.image.present?
              = cl_image_tag @product.image.url, alt: "Dish image"
            - else
              %img{alt: "Placeholder"}
          %div
            %p.text-title= @product.title
            %p.text-description= @product.description
            %p.text-price.dish-price= "$#{@product.price}"
      %td= button_to "Delete", admin_product_path(@product), method: :delete, data: { confirm: "Are you sure you want to delete this product?" }
